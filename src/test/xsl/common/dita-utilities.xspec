        <x:param name="uri" select="'foo/bar/..'"/>
      </x:call>
      <x:expect label="" select="'foo'"/>
    </x:scenario>

    <x:scenario label="normalize ./bar/baz">
      <x:call function="dita-ot:normalize-uri">
